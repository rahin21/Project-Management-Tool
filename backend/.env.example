# Server Configuration
NODE_ENV=production
PORT=10000

# Database Configuration (Render will provide these)
DB_HOST=your-render-postgres-host
DB_PORT=5432
DB_USER=your-render-postgres-user
DB_PASSWORD=your-render-postgres-password
DB_NAME=pmtool

# Redis Configuration (Render will provide these)
REDIS_HOST=your-render-redis-host
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your-secure-jwt-secret-key

# Elasticsearch Configuration (Optional - configure separately)
ELASTICSEARCH_NODE=http://your-elasticsearch-service:9200

# CORS Configuration (Update with your frontend URL)
CORS_ORIGIN=https://your-frontend-domain.com